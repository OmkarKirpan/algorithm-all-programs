# include<iostream>

using namespace std;

int main()
{
 
          int a[4],b[4],c[8],i,j;
          cout<<"ENTER THE ELEMENTS OF COMPOSITE ARRAY:\n";
         
         for(i=0; i<8 ;i++)            //Loop for input
         {
                  cout<<"c["<<i<<"]=";
                  cin>>c[i];
         }
         cout<<endl; 
 
         for(i=0,j=0 ; j<8 ; i++,j+=2)
        {
                a[i]=c[j];
                b[i]=c[j+1];
        }
  
        cout<<"\nPRINT THE ELEMENTS OF ARRAY1:\n";
        for(i=0; i<4 ;i++)            //Loop for output
        {
                cout<<"b["<<i<<"]=";
                cout<<b[i]<<endl;
        }
 
        cout<<"\nPRINT THE ELEMENTS OF ARRAY2:\n";
        for(i=0; i<4 ;i++)            //Loop for output
       {
               cout<<"a["<<i<<"]=";
               cout<<a[i]<<endl;
       }
  
        return 0;
}


// ===================================================== Below Another Code ==========================================================
#include<iostream.h>
#include<conio.h>

void main()
 {
   int a[10],b[10],c[20],i;
   clrscr();
   cout<<"Enter Elements in 1st Array: ";
   for(i=0;i<10;i++)
   {
   cin>>a[i];
   }
   cout<<"Enter Elements in 2nd Array: ";
   for(i=0;i<10;i++)
   {
   cin>>b[i];
   }
   cout<<"\nElements of Array After Merge: ";
   for(i=0;i<10;i++)
   {
    c[i]=a[i];
    c[i+10]=b[i];
   }
   for(i=0;i<20;i++)
   {
   cout<<c[i];
   }
  getch();
 }
